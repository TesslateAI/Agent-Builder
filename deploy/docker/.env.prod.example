# =============================================================================
# Production Environment Configuration
# Copy this file to .env.prod and update with your production values
# =============================================================================

# ===================
# Application Settings
# ===================
NODE_ENV=production
FLASK_ENV=production
LOG_LEVEL=INFO

# ===================
# URLs and Ports
# ===================
FRONTEND_URL=https://example.com
BACKEND_URL=https://api.example.com
KEYCLOAK_PUBLIC_URL=https://auth.example.com

# Port configuration (optional - defaults shown)
FRONTEND_PORT=80
BACKEND_PORT=5000
POSTGRES_PORT=5432
REDIS_PORT=6379
KEYCLOAK_PORT=8080

# ===================
# Database Configuration
# ===================
POSTGRES_DB=agentbuilder
POSTGRES_USER=produser
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
DATABASE_URL=postgresql://produser:CHANGE_ME_STRONG_PASSWORD_HERE@postgres:5432/agentbuilder

# ===================
# Redis Configuration
# ===================
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_HERE
REDIS_HOST=redis

# ===================
# Security Keys (REQUIRED - Generate new values!)
# ===================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=CHANGE_ME_GENERATE_NEW_SECRET_KEY

# Generate with: openssl rand -base64 32
KEYCLOAK_CLIENT_SECRET=CHANGE_ME_KEYCLOAK_CLIENT_SECRET

# ===================
# Keycloak Configuration
# ===================
KEYCLOAK_ADMIN_PASSWORD=CHANGE_ME_ADMIN_PASSWORD
KEYCLOAK_REALM=agent-builder
KEYCLOAK_CLIENT_ID=agent-builder-app

# ===================
# LLM Configuration (At least one required)
# ===================

# Option 1: OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
# OPENAI_API_BASE=https://api.openai.com/v1
# OPENAI_MODEL_NAME=gpt-3.5-turbo

# Option 2: Anthropic
# ANTHROPIC_API_KEY=your-anthropic-key
# ANTHROPIC_MODEL_NAME=claude-3-sonnet-20240229

# Option 3: Azure OpenAI
# AZURE_OPENAI_API_KEY=your-azure-key
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name

# ===================
# MCP Configuration (Optional)
# ===================
MCP_CONFIG_FILE=/app/builder/backend/servers_config.json
MCP_ENABLE_ROOTS=true
MCP_ENABLE_SAMPLING=true

# ===================
# SSL/TLS Configuration (For nginx)
# ===================
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ===================
# Monitoring & Observability (Optional)
# ===================
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
# ENABLE_METRICS=true
# ENABLE_TRACING=true

# ===================
# Email Configuration (Optional)
# ===================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=notifications@example.com
# SMTP_PASSWORD=smtp-password
# SMTP_FROM=Agent Builder <notifications@example.com>

# ===================
# Backup Configuration (Optional)
# ===================
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
# BACKUP_RETENTION_DAYS=30
# S3_BACKUP_BUCKET=agent-builder-backups
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret